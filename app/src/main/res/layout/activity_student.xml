<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity"
    android:background="@drawable/lib2"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Student Registration Form"
            android:textColor="#ffffff"
            android:background="#0D3269"
            android:textSize="25dp"
            android:textStyle="bold"
             />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:layout_margin="2dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/student1"/>
    <EditText
        android:id="@+id/sname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter the name"
        android:textColorHint="#000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:gravity="center"/>

    <EditText

        android:id="@+id/semail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:textColorHint="#000000"
        android:gravity="center"
        android:hint=" Enter EmailID"
        android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/spass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center"
            android:hint=" Enter password"
            android:textColorHint="#000000"
            android:inputType="textPassword"
           />

        <EditText
            android:id="@+id/sentrol"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
             android:gravity="center"
            android:ems="10"

            android:textColorHint="#000000"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:textSize="20dp"
            android:hint=" Enter Enrollment no."
            android:inputType="textPersonName"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Gender:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginHorizontal="1dp"
                    android:text="Female"></RadioButton>

            </LinearLayout>

        </RadioGroup>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:text="---Selected branch--"
        android:textSize="20dp"
        />
    <Spinner
        android:layout_marginTop="5dp"
            android:id="@+id/spinner"
        android:layout_width="250dp"
            android:layout_gravity="center"
            android:background="#ffffff"

            android:layout_height="wrap_content"
            />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:text="---Selected year--"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <Spinner
        android:layout_marginTop="5dp"
        android:id="@+id/spinner1"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/reg"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:text="Submit"
        android:background="#0D3269"
        />
    <Button

        android:id="@+id/stresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#0D3269"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="sign In"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>